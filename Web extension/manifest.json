{
  "manifest_version": 3,
  "name": "MovieBox Focus Blocker",
  "version": "1.0",
  "description": "Blocks MovieBox.ph after 5 minutes of watching and resets daily",
  "permissions": ["storage", "notifications", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://moviebox.ph/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://moviebox.ph/*"]
}

